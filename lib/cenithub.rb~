module Cenithub

    class << self
      attr_accessor :configuration
    end

    def self.configure
      self.configuration ||= Configuration.new
      yield(configuration)
    end

    class Configuration
      attr_accessor :connection_id, :connection_token, :push_url

      def initialize
        @push_url = 'https://www.cenithub.com/api/v1/push'
        @connection_id = "C629075473"
        @connection_token = "pbf6kWmrCz7ZyA7Vn6aC"
      end
    end

end
